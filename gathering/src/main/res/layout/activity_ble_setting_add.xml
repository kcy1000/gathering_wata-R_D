<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#0B3687"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/btnBack"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:background="@drawable/btn_back_click"
                    android:layout_width="16.67dp"
                    android:layout_height="16.67dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <TextView
                android:visibility="gone"
                android:layout_marginBottom="8dp"
                android:textSize="16dp"
                android:alpha="0.68"
                android:textColor="#000"
                android:text="MAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:visibility="gone"
                android:hint="F5:92:82:44:22:DA"
                android:lines="1"
                android:id="@+id/bleSettingAddInputMac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <TextView
                android:layout_marginBottom="8dp"
                android:textSize="16dp"
                android:alpha="0.68"
                android:textColor="#000"
                android:text="UUID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="b9s0df30-fdf8-46de-aff9-25556b57fe6d"
                android:lines="1"
                android:id="@+id/bleSettingAddInputUuid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <TextView
                android:layout_marginBottom="8dp"
                android:textSize="16dp"
                android:alpha="0.68"
                android:textColor="#000"
                android:text="Major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="52378"
                android:lines="1"
                android:id="@+id/bleSettingAddInputMajor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <TextView
                android:layout_marginBottom="8dp"
                android:textSize="16dp"
                android:alpha="0.68"
                android:textColor="#000"
                android:text="Minor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:hint="32"
                android:lines="1"
                android:id="@+id/bleSettingAddInputMinor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="right"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/bleSettingAddBtnCancel"
                    android:layout_marginRight="8dp"
                    android:text="취소"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/bleSettingAddBtnApply"
                    android:text="적용"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>