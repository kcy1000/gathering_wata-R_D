<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/area_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="31dp"
            android:text="@string/company_info_setting"
            android:textColor="#5f5d70"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="31dp"
                android:text="@string/area"
                android:textColor="#5f5d70"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/office_area_layout"
                android:layout_width="wrap_content"
                android:layout_height="60dip"
                android:layout_marginStart="20dip"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dip"
                android:background="@drawable/sub_btn01"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/office_area_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dip"
                    android:layout_marginBottom="1dip"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/office_area_btn"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="1dip"
                    android:layout_marginBottom="1dip"
                    android:layout_weight="0"
                    android:background="@drawable/sub_btn04"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="@string/company_name"
                android:textColor="#5f5d70"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/line_num_layout"
                android:layout_width="wrap_content"
                android:layout_height="60dip"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dip"
                android:background="@drawable/sub_btn01"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/office_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dip"
                    android:layout_marginBottom="1dip"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/office__btn"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="1dip"
                    android:layout_marginBottom="1dip"
                    android:layout_weight="0"
                    android:background="@drawable/sub_btn04"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="@string/floors"
                android:textColor="#5f5d70"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/office_floors_lever_layout"
                android:layout_width="wrap_content"
                android:layout_height="60dip"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dip"
                android:background="@drawable/sub_btn01"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/office_floors_lever_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dip"
                    android:layout_marginBottom="1dip"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/office_floors_lever_btn"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="1dip"
                    android:layout_marginBottom="1dip"
                    android:layout_weight="0"
                    android:background="@drawable/sub_btn04"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
