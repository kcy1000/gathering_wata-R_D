<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#0B3687"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="설  정"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#dcdcdc"
        android:orientation="vertical"
        android:padding="10dp" >

        <Button
            android:id="@+id/setting_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="민감도 설정"
            android:textSize="14sp" />

        <Button
            android:id="@+id/setting_btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="수집주기 설정"
            android:textSize="14sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/setting_btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="보폭 설정"
            android:textSize="14sp" />

        <Button
            android:id="@+id/setting_add_bles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="BLE 검색 설정"
            android:textSize="14sp" />

        <Button
            android:id="@+id/setting_ignore_bles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="BLE 무시 설정"
            android:textSize="14sp" />

        <ToggleButton
            android:id="@+id/setting_show_link_number"
            android:textOff="링크 번호 표시 꺼짐"
            android:textOn="링크 번호 표시 켜짐"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/setting_btn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="닫   기"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>